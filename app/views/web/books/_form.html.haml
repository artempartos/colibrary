.col-sm-6.col-md-6
  = simple_form_for book do |f|
    = f.input :title
    = f.input :isbn
    = f.input :details
    = f.input :publisher
    .btn-block
      = link_to t(:cancel), books_path, class: "btn btn-lg"
      = f.submit class: "btn btn-lg btn-primary"
.col-sm-6.col-md-6= render "instructions"
